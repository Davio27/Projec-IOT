// C++ code
//
#include <Adafruit_LiquidCrystal.h>

int Moisture = 0;

int unnamed = 0;

int i = 0;

int j = 0;

int seconds = 0;

Adafruit_LiquidCrystal lcd_1(0);

void setup()
{
  lcd_1.begin(16, 2);
  pinMode(A0, OUTPUT);
  pinMode(A0, INPUT);
  pinMode(10, OUTPUT);

  lcd_1.print("THE MAB");
}

void loop()
{
  lcd_1.setCursor(0, 1);
  lcd_1.print(seconds);
  lcd_1.setBacklight(1);
  seconds += 0;
  delay(500); // Wait for 500 millisecond(s)
  lcd_1.setBacklight(1);
  seconds += 1;
  delay(500); // Wait for 500 millisecond(s)
  digitalWrite(A0, HIGH);
  Moisture = analogRead(A0);
  // Umidade
  digitalWrite(A0, HIGH);
  if (Moisture < 800) {
    digitalWrite(10, LOW);
  } else {
    if (Moisture > 600) {
      digitalWrite(10, HIGH);
    }
  }
}
